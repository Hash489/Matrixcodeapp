void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Wi-Fi Direct & Bluetooth Chat',
      theme: ThemeData(
        primaryColor: Colors.green[900], // Matrix green color
        accentColor: Colors.black,
        scaffoldBackgroundColor: Colors.black,
